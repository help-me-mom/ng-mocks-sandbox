{
  "name": "ng-mocks-sandbox",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "description": "A sandbox with guides and examples to play with ng-mocks",
  "keywords": [
    "angular",
    "ng-mocks",
    "mock",
    "mocking",
    "test",
    "testing",
    "sandbox",
    "playground"
  ],
  "scripts": {
    "npm": "npm",
    "ng": "ng",
    "start": "ng serve",
    "test": "ng test",
    "prettier:repo": "prettier --loglevel warn -u -w .",
    "prettier:check": "prettier -u -c .",
    "ts:check": "tsc --noEmit",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@angular/animations": "15.2.0",
    "@angular/common": "15.2.0",
    "@angular/compiler": "15.2.0",
    "@angular/core": "15.2.0",
    "@angular/forms": "15.2.0",
    "@angular/platform-browser": "15.2.0",
    "@angular/platform-browser-dynamic": "15.2.0",
    "@angular/router": "15.2.0",
    "@types/jasmine": "4.3.1",
    "core-js": "3.28.0",
    "jasmine-core": "4.5.0",
    "ng-mocks": "14.6.0",
    "rxjs": "7.8.0",
    "tslib": "2.5.0",
    "zone.js": "0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "15.1.6",
    "@angular/cli": "15.1.6",
    "@angular/compiler-cli": "15.2.0",
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@types/node": "18.14.6",
    "husky": "8.0.3",
    "karma": "6.4.1",
    "karma-chrome-launcher": "3.1.1",
    "karma-ie-launcher": "1.0.0",
    "karma-jasmine": "5.1.0",
    "karma-junit-reporter": "2.0.1",
    "npm": "9.5.1",
    "prettier": "2.8.4",
    "puppeteer": "19.7.2",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "renovate": {
    "extends": [
      "config:base",
      ":semanticCommitTypeAll(chore)"
    ],
    "dependencyDashboard": false,
    "rangeStrategy": "pin",
    "rebaseWhen": "conflicted",
    "separateMajorMinor": true,
    "separateMinorPatch": true,
    "separateMultipleMajor": true,
    "ignoreDeprecated": false,
    "semanticCommitScope": "{{#if baseDir}}{{baseDir}}{{else}}deps{{/if}}",
    "additionalBranchPrefix": "{{#if baseDir}}{{baseDir}}/{{else}}root/{{/if}}",
    "reviewers": [
      "satanTime"
    ],
    "packageRules": [
      {
        "packageNames": [
          "satantime/puppeteer-node",
          "node",
          "@types/node"
        ],
        "allowedVersions": "/^\\d*[02468]\\./"
      }
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
