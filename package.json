{
  "name": "ng-mocks-sandbox",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "description": "A sandbox with guides and examples to play with ng-mocks",
  "keywords": [
    "angular",
    "ng-mocks",
    "mock",
    "mocking",
    "test",
    "testing",
    "sandbox",
    "playground"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test": "ng test",
    "prettier:repo": "prettier --loglevel warn -u -w .",
    "prettier:check": "prettier -u -c .",
    "ts:check": "tsc --noEmit"
  },
  "dependencies": {
    "@angular/animations": "11.2.0",
    "@angular/common": "11.2.0",
    "@angular/compiler": "11.2.0",
    "@angular/core": "11.2.0",
    "@angular/forms": "11.2.0",
    "@angular/platform-browser": "11.2.0",
    "@angular/platform-browser-dynamic": "11.2.0",
    "@angular/router": "11.2.0",
    "@types/jasmine": "3.6.3",
    "core-js": "3.8.3",
    "jasmine-core": "3.6.0",
    "ng-mocks": "11.5.0",
    "rxjs": "6.6.3",
    "tslib": "2.1.0",
    "zone.js": "0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.1101.4",
    "@angular/cli": "11.1.4",
    "@angular/compiler-cli": "11.2.0",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@types/node": "12.19.16",
    "husky": "4.3.8",
    "karma": "5.2.3",
    "karma-chrome-launcher": "3.1.0",
    "karma-ie-launcher": "1.0.0",
    "karma-jasmine": "4.0.1",
    "karma-junit-reporter": "2.0.1",
    "prettier": "2.2.1",
    "puppeteer": "6.0.0",
    "ts-node": "9.1.1",
    "typescript": "4.1.5"
  },
  "renovate": {
    "extends": [
      "config:base",
      ":semanticCommitTypeAll(chore)"
    ],
    "rangeStrategy": "pin",
    "rebaseWhen": "conflicted",
    "separateMajorMinor": true,
    "separateMinorPatch": true,
    "separateMultipleMajor": true,
    "ignoreDeprecated": false,
    "semanticCommitScope": "{{#if baseDir}}{{baseDir}}{{else}}deps{{/if}}",
    "additionalBranchPrefix": "{{#if baseDir}}{{baseDir}}/{{else}}root/{{/if}}",
    "reviewers": [
      "satanTime"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run prettier:repo && npm run ts:check"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
