{
  "name": "ng-mocks-sandbox",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "description": "A sandbox with guides and examples to play with ng-mocks",
  "keywords": [
    "angular",
    "ng-mocks",
    "mock",
    "mocking",
    "test",
    "testing",
    "sandbox",
    "playground"
  ],
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test": "ng test",
    "prettier:repo": "prettier --loglevel warn -u -w .",
    "prettier:check": "prettier -u -c .",
    "ts:check": "tsc --noEmit",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@angular/animations": "11.2.8",
    "@angular/common": "11.2.8",
    "@angular/compiler": "11.2.8",
    "@angular/core": "11.2.8",
    "@angular/forms": "11.2.8",
    "@angular/platform-browser": "11.2.8",
    "@angular/platform-browser-dynamic": "11.2.8",
    "@angular/router": "11.2.8",
    "@types/jasmine": "3.6.9",
    "core-js": "3.10.0",
    "jasmine-core": "3.7.1",
    "ng-mocks": "11.10.0",
    "rxjs": "6.6.7",
    "tslib": "2.2.0",
    "zone.js": "0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "0.1102.8",
    "@angular/cli": "11.2.8",
    "@angular/compiler-cli": "11.2.8",
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@types/node": "12.20.7",
    "husky": "6.0.0",
    "karma": "5.2.3",
    "karma-chrome-launcher": "3.1.0",
    "karma-ie-launcher": "1.0.0",
    "karma-jasmine": "4.0.1",
    "karma-junit-reporter": "2.0.1",
    "prettier": "2.2.1",
    "puppeteer": "8.0.0",
    "ts-node": "9.1.1",
    "typescript": "4.1.5"
  },
  "renovate": {
    "extends": [
      "config:base",
      ":semanticCommitTypeAll(chore)"
    ],
    "rangeStrategy": "pin",
    "rebaseWhen": "conflicted",
    "separateMajorMinor": true,
    "separateMinorPatch": true,
    "separateMultipleMajor": true,
    "ignoreDeprecated": false,
    "semanticCommitScope": "{{#if baseDir}}{{baseDir}}{{else}}deps{{/if}}",
    "additionalBranchPrefix": "{{#if baseDir}}{{baseDir}}/{{else}}root/{{/if}}",
    "reviewers": [
      "satanTime"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
